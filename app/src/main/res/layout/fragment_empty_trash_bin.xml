<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.EmptyTrashBinFragment">

    <ImageView
        android:id="@+id/description_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/icon_empty_trash"
        android:src="@drawable/ic_trash_bin_empty"
        app:layout_constraintBottom_toTopOf="@+id/description_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:tint="?attr/colorError" />

    <TextView
        android:id="@+id/description_text"
        style="@style/Fullscreen.Description"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/empty_trash_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description_image"
        android:layout_marginTop="@dimen/space_medium"/>

</androidx.constraintlayout.widget.ConstraintLayout>