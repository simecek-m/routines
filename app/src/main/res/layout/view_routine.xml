<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="routine"
            type="dev.simecek.routines.database.entity.Routine" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_square_radius"
        android:padding="@dimen/space_medium"
        style="@style/RoutineWidget"
        android:layout_marginTop="@dimen/space_small">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{routine.title}"
            tools:text="Routine"
            app:layout_constraintBottom_toTopOf="@+id/reminder_icon"
            app:layout_constraintEnd_toStartOf="@+id/icon"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/RoutineWidgetText"
            android:textSize="@dimen/font_size_medium"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/reminder_icon"
            android:layout_width="@dimen/routine_widget_reminder_icon_size"
            android:layout_height="@dimen/routine_widget_reminder_icon_size"
            android:layout_marginTop="@dimen/space_small"
            android:background="@drawable/ic_reminder"
            style="@style/RoutineWidgetIcon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintTop_toBottomOf="@+id/title"
            android:contentDescription="@string/icon_alarm" />

        <TextView
            android:id="@+id/reminder_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{routine.reminder.toString()}"
            android:textSize="@dimen/font_size_small"
            tools:text="@string/midday_time"
            style="@style/RoutineWidgetText"
            app:layout_constraintBottom_toBottomOf="@+id/reminder_icon"
            app:layout_constraintStart_toEndOf="@+id/reminder_icon"
            app:layout_constraintTop_toTopOf="@+id/reminder_icon" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/routine_widget_icon_size"
            android:layout_height="@dimen/routine_widget_icon_size"
            android:background="@drawable/ic_food"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/title"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/RoutineWidgetIcon"
            android:contentDescription="@string/routine_icon" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>