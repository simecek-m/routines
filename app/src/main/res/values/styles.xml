<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FullscreenTitle">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_huge</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FullscreenDescription">
        <item name="android:layout_marginTop">@dimen/space_small</item>
        <item name="android:lineSpacingMultiplier">@dimen/line_spacing_bigger</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
    </style>
</resources>