<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">?attr/colorSurface</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="startIconTint">?attr/colorOnSurface</item>
        <item name="materialThemeOverlay">@style/MaterialThemeOverlay</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius</item>
    </style>

    <style name="MaterialThemeOverlay" parent="ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox">
        <item name="editTextStyle">@style/TextInputEditText</item>
        <item name="colorControlActivated">?attr/colorOnSurface</item>
    </style>

    <style name="TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:padding">14dp</item>
        <item name="android:maxLength">25</item>
    </style>

    <style name="TimePickerMaterialTheme" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="chipStyle">@style/TimePicker.Display</item>
    </style>

    <style name="TimePicker.Display" parent="Widget.MaterialComponents.TimePicker.Display">
        <item name="android:textAppearance">?attr/textAppearanceHeadline3</item>
        <item name="android:textSize">@dimen/time_picker_time_text_size</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="iconGravity">textStart</item>
        <item name="iconSize">@dimen/button_icon_size</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="backgroundTint">@color/button_background</item>
    </style>

    <style name="Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconGravity">textStart</item>
        <item name="iconTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline4</item>
    </style>

    <style name="IconPicker">
        <item name="android:background">@drawable/shape_square_radius</item>
        <item name="android:backgroundTint">?attr/colorSurface</item>
    </style>

    <style name="IconPicker.Icon" parent="">
        <item name="android:padding">@dimen/icon_picker_icon_padding</item>
        <item name="tint">?attr/colorOnSurface</item>
        <item name="android:background">@drawable/shape_circle</item>
        <item name="android:backgroundTint">@color/transparent</item>
    </style>

    <style name="IconPicker.Icon.Picked">
        <item name="tint">?attr/colorSurface</item>
        <item name="android:backgroundTint">?attr/colorOnSurface</item>
    </style>

    <style name="Title.Text" parent="">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
    </style>

    <style name="Title.Icon" parent="">
        <item name="android:layout_marginTop">@dimen/title_icon_margin</item>
        <item name="android:layout_marginBottom">@dimen/title_icon_margin</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:layout_marginEnd">@dimen/space_small</item>
    </style>

    <style name="RoutineCard">
        <item name="android:backgroundTint">?attr/colorSurface</item>
    </style>

    <style name="RoutineCard.Text" parent="">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="RoutineCard.Icon">
        <item name="android:backgroundTint">?attr/colorOnSurface</item>
    </style>

    <style name="Fullscreen.Title" parent="">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline3</item>
    </style>

    <style name="Fullscreen.Description" parent="">
        <item name="android:layout_marginTop">@dimen/space_small</item>
        <item name="android:lineSpacingMultiplier">@dimen/line_spacing_bigger</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

</resources>