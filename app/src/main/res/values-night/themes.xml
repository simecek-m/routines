<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Routines" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand</item>
        <item name="colorPrimaryVariant">@color/brand_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brand</item>
        <item name="colorSecondaryVariant">@color/brand_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Theme colors -->
        <item name="android:colorBackground">@color/black</item>
        <item name="colorOnBackground">@color/gray_light</item>
        <item name="colorSurface">@color/gray_dark</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="m">@color/transparent</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <!-- Customize your theme here. -->
        <item name="textInputStyle">@style/TextInputLayout</item>
        <item name="extendedFloatingActionButtonStyle">@style/ExtendedFloatingActionButton</item>
        <item name="fontFamily">@font/quicksand</item>
        <item name="materialButtonStyle">@style/Button</item>
    </style>

    <style name="ThemedLogo">
        <item name="android:src">@drawable/ic_logo_dark</item>
    </style>

</resources>