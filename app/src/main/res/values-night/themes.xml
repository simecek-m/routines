<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Routines" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand</item>
        <item name="colorPrimaryVariant">@color/brand_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/gray_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/gray_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="m">@color/transparent</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <!-- Customize your theme here. -->
        <item name="textInputStyle">@style/TextInputLayout</item>
        <item name="extendedFloatingActionButtonStyle">@style/ExtendedFloatingActionButton</item>
        <item name="fontFamily">@font/quicksand</item>
        <item name="materialButtonStyle">@style/Button</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/gray_dark</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="startIconTint">@color/white</item>
        <item name="materialThemeOverlay">@style/MaterialThemeOverlay</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius</item>
    </style>

    <style name="MaterialThemeOverlay" parent="ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox">
        <item name="editTextStyle">@style/TextInputEditText</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textStyle">bold</item>
        <item name="android:padding">20dp</item>
        <item name="android:maxLength">25</item>
    </style>

    <style name="IconPicker">
        <item name="android:background">@drawable/shape_square_radius</item>
        <item name="android:backgroundTint">@color/gray_dark</item>
    </style>

    <style name="Icon">
        <item name="android:tint">@color/gray</item>
        <item name="android:backgroundTint">@color/transparent</item>
    </style>

    <style name="Icon.Selected">
        <item name="android:tint">@color/black</item>
        <item name="android:background">@drawable/shape_circle</item>
        <item name="android:backgroundTint">@color/gray_light</item>
    </style>

    <style name="TextHeader">
        <item name="android:layout_marginTop">@dimen/space_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleText">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/quicksand_bold</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="TitleIcon">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:layout_marginEnd">@dimen/space_small</item>
    </style>

    <style name="RoutineWidgetText">
        <item name="android:textColor">@color/gray_light</item>
    </style>

    <style name="RoutineWidgetIcon">
        <item name="android:backgroundTint">@color/gray_light</item>
    </style>

    <style name="Button" parent="Button.Base">
        <item name="backgroundTint">@color/button_white</item>
    </style>

    <style name="FullscreenTitle">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/font_size_huge</item>
        <item name="fontFamily">@font/quicksand_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ThemedLogo">
        <item name="android:src">@drawable/ic_logo_dark</item>
    </style>

    <style name="FullscreenDescription">
        <item name="android:layout_marginTop">@dimen/space_small</item>
        <item name="android:lineSpacingMultiplier">@dimen/line_spacing_bigger</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
    </style>

    <style name="Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/gray</item>
        <item name="android:textColor">@color/gray</item>
    </style>

</resources>